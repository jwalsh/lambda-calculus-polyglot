# Database Configuration
PGDATABASE=${PGDATABASE:-your_database_name}
PGUSER=${PGUSER:-your_database_user}
PGPASSWORD=${PGPASSWORD:-your_database_password}
PGHOST=${PGHOST:-localhost}
PGPORT=${PGPORT:-5432}

# Generate DATABASE_URL if not set
DATABASE_URL=${DATABASE_URL:-postgresql://${PGUSER}:${PGPASSWORD}@${PGHOST}:${PGPORT}/${PGDATABASE}}

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# Azure OpenAI Configuration (if using Azure)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_API_URL=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-05-15
AZURE_OPENAI_DEPLOYMENT_NAME=your-model-deployment-name

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_API_URL=https://api.anthropic.com
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=1000

# Ollama Configuration
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=1000

# Llama 3.1 Model Sizes (for reference)
LLAMA_3_1_8B_MODEL=llama3.1-8b
LLAMA_3_1_70B_MODEL=llama3.1-70b
LLAMA_3_1_405B_MODEL=llama3.1-405b

# Default AI Provider (can be 'openai', 'azure_openai', 'anthropic', or 'ollama')
DEFAULT_AI_PROVIDER=ollama

# Grading Configuration
GRADING_PROVIDER=ollama
GRADING_MODEL=llama3.1-70b
DEFAULT_GRADING_RUBRIC="Evaluate code for correctness, efficiency, and readability"

# Application Configuration
APP_DEBUG=false
APP_LOG_LEVEL=info

# Security Configuration
JWT_SECRET=your_jwt_secret_here

# Other API Configurations (if needed)
# SOME_OTHER_API_KEY=your_other_api_key_here